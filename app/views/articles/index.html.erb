<h3>Всякие новости:</h3>

<% @articles.each do |article| %>

<h4>
    <%= article.title %>
</h4>

<p>
    <%= article.text %>
</p>

<p>
    <%= link_to 'Показать', article_path(article) %>
    <%= link_to 'Изменить', edit_article_path(article)%>
    <%= link_to 'Удалить' , article_path(article), method: :delete, data: { confirm: 'Вы уверены?' } %>
</p>

<hr />

<% end %>