<h1><%= @article.title %></h1>
<p>
    <%= @article.text %>
</p>
<p>
    <%= link_to "К статьям", articles_path%>
</p>
<h3>
    Комментарии:
</h3>
<% @article.comments.each do |commment| %>
<b><%= commment.author %></b> (<%= @article.created_at.inspect %>) написал(а):
<p>
    <%= commment.body %>
</p>
<hr />
<% end %>
<h3>
    Высказаться:
</h3>
<%= form_for ([@article, @article.comments.build]) do |f| %>
    <p>
        <%= f.label :author %> <br />
        <%= f.text_field :author %>
    </p>
    <p>
        <%= f.label :body %> <br />
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end%>