<h3>Написать статью</h3>
<%= form_for :article, url: articles_path do |f| %>
    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :text %> <br />
        <%= f.text_area :text %>
    </p>
    <p>
        <%= f.submit 'Опубликовать', class: 'btn btn-primary' %>
    </p>
<% end%>